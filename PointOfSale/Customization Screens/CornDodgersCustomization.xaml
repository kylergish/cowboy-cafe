<UserControl x:Class="PointOfSale.Customization_Screens.CornDodgersCustomization"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale.Customization_Screens"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="600">
    <StackPanel>
        <TextBlock FontSize="40">Customize these Corn Dodgers!</TextBlock>
        <StackPanel>
            <RadioButton GroupName="Size" Name="Small">Small</RadioButton>
            <RadioButton GroupName="Size" Name="Medium">Medium</RadioButton>
            <RadioButton GroupName="Size" Name="Large">Large</RadioButton>
        </StackPanel>
    </StackPanel>
</UserControl>
